<nav class="navigation">
        <input class="navigation__toggle" id="menu__toggle" type="checkbox" hidden>
        <label class="navigation__burger-menu" for="menu__toggle">
            <span></span>
        </label>
    <ul class="navigation-list">
        {% for key, item in data[1].data %}
            <li
                data-aos="fade-left"
                data-aos-delay="{{ 200+100*(key+1) }}"
                data-aos-duration="1000"
            ><a class="navigation-list__link" href="{{ item.href }}">{{ item.title }}</a></li>
        {% endfor %}
    </ul>
</nav>